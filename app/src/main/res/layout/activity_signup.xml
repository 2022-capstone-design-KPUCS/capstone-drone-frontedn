<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <Button
        android:id="@+id/signupButton2"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0D77F3"
        android:text="Sign up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserPassword" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:backgroundTint="#70E5E5E5"
        android:ems="10"
        android:hint="       아이디"
        android:inputType="textPersonName"
        android:textColorHint="#020000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
        app:layout_constraintStart_toStartOf="@+id/editTextEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextUserPassword"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round"
        android:backgroundTint="#70E5E5E5"
        android:ems="10"
        android:hint="       비밀번호"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextUsername"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsername"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:backgroundTint="#70E5E5E5"
        android:ems="10"
        android:hint="       이메일"
        android:inputType="textPersonName"
        android:textColorHint="#020000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/signup_image"
        android:layout_width="393dp"
        android:layout_height="279dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-16dp"
        android:text="Sign up"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/signup_image"
        app:layout_constraintTop_toBottomOf="@+id/signup_image" />
</androidx.constraintlayout.widget.ConstraintLayout>